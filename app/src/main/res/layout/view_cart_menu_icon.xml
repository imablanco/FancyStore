<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    android:padding="@dimen/spacingMini"
    tools:background="?colorPrimary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacingMini"
        android:contentDescription="@null"
        android:src="@drawable/ic_bag"
        app:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/tvCartItemCount"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@drawable/bg_cart_badge"
        android:gravity="center"
        android:minWidth="@dimen/cartMenuBadgeSize"
        android:minHeight="@dimen/cartMenuBadgeSize"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:text="10" />
</FrameLayout>
